---
import Layout from '../../layouts/Layout.astro';

// In production, this would check authentication
const isAuthenticated = false;
---

<Layout title="Panel Administracyjny" description="Panel administracyjny UBR">
  <div class="min-h-screen bg-gray-100 flex items-center justify-center px-4">
    <div class="max-w-md w-full">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-2xl font-bold text-center text-gray-900 mb-8">
          Panel Administracyjny UBR
        </h1>
        
        {!isAuthenticated ? (
          <!-- Login Form -->
          <form class="space-y-6" id="admin-login-form">
            <div>
              <label for="pin" class="block text-sm font-medium text-gray-700 mb-2">
                PIN dostępu
              </label>
              <input
                type="password"
                id="pin"
                name="pin"
                required
                maxlength="6"
                pattern="[0-9]{4,6}"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                placeholder="Wprowadź 4-6 cyfrowy PIN"
              />
            </div>
            
            <button
              type="submit"
              class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors duration-200 font-medium"
            >
              Zaloguj się
            </button>
            
            <p class="text-sm text-center text-gray-600 mt-4">
              Panel dostępny tylko dla autoryzowanych użytkowników
            </p>
          </form>
        ) : (
          <!-- Admin Menu -->
          <div class="space-y-4">
            <a
              href="/admin/upload"
              class="block w-full bg-blue-600 text-white py-3 px-4 rounded-md hover:bg-blue-700 transition-colors duration-200 text-center font-medium"
            >
              📸 Dodaj zdjęcia
            </a>
            
            <a
              href="/admin/manage"
              class="block w-full bg-gray-600 text-white py-3 px-4 rounded-md hover:bg-gray-700 transition-colors duration-200 text-center font-medium"
            >
              📁 Zarządzaj galerią
            </a>
            
            <button
              class="block w-full bg-red-600 text-white py-3 px-4 rounded-md hover:bg-red-700 transition-colors duration-200 text-center font-medium"
              onclick="logout()"
            >
              🚪 Wyloguj się
            </button>
          </div>
        )}
      </div>
      
      <p class="text-center text-sm text-gray-600 mt-8">
        Wersja demo - funkcjonalność w przygotowaniu
      </p>
    </div>
  </div>

  <script>
    // Simple login simulation for demo
    const form = document.getElementById('admin-login-form');
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      // In production, this would validate against a backend
      alert('Panel administracyjny będzie dostępny w przyszłej wersji');
    });
    
    function logout() {
      // In production, this would clear session
      window.location.reload();
    }
  </script>
</Layout>