---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const services = [
  {
    title: 'Domy jednorodzinne',
    description: 'Kompleksowa budowa domów od fundamentów po wykończenie',
    icon: '🏠',
  },
  {
    title: 'Mieszkania',
    description: 'Profesjonalne remonty i adaptacje mieszkań',
    icon: '🏢',
  },
  {
    title: 'Remonty kapitalne',
    description: 'Gruntowne remonty z wymianą instalacji',
    icon: '🔨',
  },
  {
    title: 'Wykończenia wnętrz',
    description: 'Kompleksowe wykończenie pod klucz',
    icon: '🎨',
  },
  {
    title: 'Dachy i elewacje',
    description: 'Pokrycia dachowe i systemy ociepleń',
    icon: '🏗️',
  },
  {
    title: 'Łazienki i kuchnie',
    description: 'Specjalistyczne wykończenia pomieszczeń',
    icon: '🚿',
  },
];

const features = [
  { title: '15+ lat doświadczenia', description: 'Solidność poparta latami praktyki' },
  { title: 'Gwarancja jakości', description: 'Wszystkie prace objęte gwarancją' },
  { title: 'Terminowość', description: 'Dotrzymujemy ustalonych terminów' },
  { title: 'Przejrzyste ceny', description: 'Dokładne wyceny bez ukrytych kosztów' },
];
---

<Layout title="Strona główna">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-blue-600 to-blue-800 text-white">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Profesjonalne Usługi Budowlane
        </h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          Budujemy Twoje marzenia - od fundamentów po wykończenie. 
          Specjalizujemy się w budowie domów, remontach i wykończeniach.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/galeria"
            class="bg-orange-500 text-white px-8 py-3 rounded-md text-lg font-medium hover:bg-orange-600 transition-colors duration-200"
          >
            Zobacz nasze realizacje
          </a>
          <a
            href="/kontakt"
            class="bg-white text-blue-600 px-8 py-3 rounded-md text-lg font-medium hover:bg-gray-100 transition-colors duration-200"
          >
            Otrzymaj wycenę
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 md:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Nasze Usługi
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Oferujemy kompleksowe usługi budowlane dla domów i mieszkań
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-xl transition-shadow duration-300">
            <div class="text-4xl mb-4">{service.icon}</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Dlaczego my?
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Stawiamy na jakość, terminowość i zadowolenie klientów
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature) => (
          <div class="text-center">
            <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-blue-600 to-blue-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Zacznijmy realizować Twój projekt
      </h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Skontaktuj się z nami już dziś i otrzymaj darmową wycenę
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/kontakt"
          class="bg-orange-500 text-white px-8 py-3 rounded-md text-lg font-medium hover:bg-orange-600 transition-colors duration-200"
        >
          Kontakt
        </a>
        <a
          href="tel:+48XXXXXXXXX"
          class="bg-white text-blue-600 px-8 py-3 rounded-md text-lg font-medium hover:bg-gray-100 transition-colors duration-200"
        >
          Zadzwoń: +48 XXX XXX XXX
        </a>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <span class="text-2xl font-bold">UBR</span>
          <p class="text-gray-400">Profesjonalne usługi budowlane</p>
        </div>
        <div class="text-center md:text-right">
          <p class="text-gray-400">&copy; 2025 UBR. Wszystkie prawa zastrzeżone.</p>
        </div>
      </div>
    </div>
  </footer>
</Layout>