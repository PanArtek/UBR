---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const services = [
  {
    title: 'Kompleksowe wykończenia wnętrz',
    description: 'Od projektu po ostatni detal - realizujemy całościowe wykończenia',
    icon: '🏠',
  },
  {
    title: 'Profesjonalny montaż płytek',
    description: 'Ceramiczne, kamienne, mozaiki - perfekcyjne układanie',
    icon: '🔷',
  },
  {
    title: 'Łazienki pod klucz',
    description: 'Hydroizolacja, armatura, ceramika - kompleksowe wykończenie',
    icon: '🚿',
  },
  {
    title: 'Montaż i wykończenie kuchni',
    description: 'Meble, okładziny, instalacje - pełne wyposażenie',
    icon: '🍳',
  },
  {
    title: 'Adaptacja poddaszy',
    description: 'Izolacja, zabudowy, podłogi - funkcjonalne przestrzenie',
    icon: '🏡',
  },
  {
    title: 'Malowanie i gładzie',
    description: 'Przygotowanie powierzchni, perfekcyjne wykończenia',
    icon: '🎨',
  },
];

const features = [
  { title: '15+ lat doświadczenia', description: 'Solidność poparta latami praktyki' },
  { title: 'Gwarancja jakości', description: 'Wszystkie prace objęte gwarancją' },
  { title: 'Terminowość', description: 'Dotrzymujemy ustalonych terminów' },
  { title: 'Przejrzyste ceny', description: 'Dokładne wyceny bez ukrytych kosztów' },
];
---

<Layout title="Strona główna">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0">
      <div class="absolute top-20 left-10 w-96 h-96 gradient-primary rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute top-40 right-10 w-80 h-80 gradient-secondary rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-20 left-1/2 w-72 h-72 bg-[#EE72F8] rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 4s;"></div>
    </div>
    
    <div class="relative flex items-center min-h-screen">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 w-full">
        <div class="text-center space-y-8 animate-fadeIn">
          <!-- Badge -->
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-[#31EC56]/30 text-sm font-medium">
            <span class="w-2 h-2 bg-[#31EC56] rounded-full mr-2 animate-pulse"></span>
            15+ lat doświadczenia w branży
          </div>
          
          <h1 class="text-5xl md:text-7xl font-black mb-6 leading-tight">
            Każdy Detal
            <span class="block gradient-text">Ma Znaczenie</span>
          </h1>
          
          <p class="text-xl md:text-2xl mb-12 max-w-4xl mx-auto text-gray-200 leading-relaxed">
            Profesjonalne prace wykończeniowe na najwyższym poziomie. 
            Specjalizujemy się w kompleksowych wykończeniach wnętrz - <span class="text-[#31EC56] font-semibold">realizujemy projekty z pasją i precyzją</span>
          </p>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
            <a href="/UBR/galeria/" class="btn btn-primary">
              Zobacz nasze realizacje
            </a>
            
            <a href="/UBR/kontakt/" class="btn bg-white/10 backdrop-blur-sm text-white border border-white/20 hover:bg-white/20">
              Otrzymaj wycenę
            </a>
          </div>
          
          <!-- Stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-16 pt-16 border-t border-white/10">
            <div class="text-center animate-slideInLeft" style="animation-delay: 0.1s;">
              <div class="text-3xl md:text-4xl font-bold gradient-text mb-2">500+</div>
              <div class="text-sm text-gray-300">Zrealizowanych projektów</div>
            </div>
            <div class="text-center animate-slideInLeft" style="animation-delay: 0.2s;">
              <div class="text-3xl md:text-4xl font-bold gradient-text mb-2">15+</div>
              <div class="text-sm text-gray-300">Lat doświadczenia</div>
            </div>
            <div class="text-center animate-slideInLeft" style="animation-delay: 0.3s;">
              <div class="text-3xl md:text-4xl font-bold gradient-text mb-2">98%</div>
              <div class="text-sm text-gray-300">Zadowolonych klientów</div>
            </div>
            <div class="text-center animate-slideInLeft" style="animation-delay: 0.4s;">
              <div class="text-3xl md:text-4xl font-bold gradient-text mb-2">24/7</div>
              <div class="text-sm text-gray-300">Wsparcie techniczne</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="section-separator"></div>

  <!-- Services Section -->
  <section class="py-20 md:py-32 bg-gradient-to-b from-white to-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 animate-fadeIn">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-[#31EC56]/10 text-[#31EC56] text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-[#31EC56] rounded-full mr-2"></span>
          Specjaliści od wykończeń wnętrz
        </div>
        <h2 class="text-4xl md:text-6xl font-black text-gray-900 mb-6">
          Prace <span class="gradient-text">Wykończeniowe</span>
        </h2>
        <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Kompleksowe prace wykończeniowe dostosowane do Twoich potrzeb
        </p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <div class="card group p-8 relative overflow-hidden animate-fadeIn" style={`animation-delay: ${index * 0.1}s;`}>
            <!-- Gradient overlay -->
            <div class="absolute inset-0 gradient-primary opacity-0 group-hover:opacity-5 transition-opacity duration-500"></div>
            
            <!-- Content -->
            <div class="relative z-10">
              <div class="text-5xl mb-6 transform group-hover:scale-110 transition-transform duration-300">{service.icon}</div>
              <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-4 group-hover:text-[#31EC56] transition-colors duration-300">{service.title}</h3>
              <p class="text-gray-600 leading-relaxed">{service.description}</p>
            </div>
            
            <!-- Number indicator -->
            <div class="absolute top-6 right-6 w-10 h-10 bg-[#31EC56]/10 text-[#31EC56] rounded-full flex items-center justify-center text-sm font-bold group-hover:bg-[#31EC56] group-hover:text-white transition-all duration-300">
              {String(index + 1).padStart(2, '0')}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div class="section-separator"></div>

  <!-- Features Section -->
  <section class="py-20 md:py-32 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 animate-fadeIn">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-[#EF036C]/10 text-[#EF036C] text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-[#EF036C] rounded-full mr-2"></span>
          Nasze przewagi
        </div>
        <h2 class="text-4xl md:text-6xl font-black text-gray-900 mb-6">
          Dlaczego <span class="gradient-text">wybrać nas?</span>
        </h2>
        <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Jakość, terminowość i zadowolenie klientów to nasze priorytety
        </p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature, index) => (
          <div class="group text-center p-6 animate-slideInRight" style={`animation-delay: ${index * 0.1}s;`}>
            <div class="relative mb-6">
              <div class="gradient-secondary w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
            </div>
            <h3 class="text-lg md:text-xl font-bold text-gray-900 mb-3 group-hover:text-[#EF036C] transition-colors duration-300">{feature.title}</h3>
            <p class="text-gray-600 leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div class="section-separator"></div>

  <!-- CTA Section -->
  <section class="relative py-20 md:py-32 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0">
      <div class="absolute top-10 left-10 w-72 h-72 gradient-secondary rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute bottom-10 right-10 w-56 h-56 gradient-primary rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center space-y-8 animate-fadeIn">
        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-[#31EC56]/30 text-sm font-medium">
          <span class="w-2 h-2 bg-[#31EC56] rounded-full mr-2 animate-pulse"></span>
          Gotowi na nowy projekt?
        </div>
        
        <h2 class="text-4xl md:text-6xl font-black mb-6 leading-tight">
          Zacznijmy realizować
          <span class="block gradient-text">Twój projekt</span>
        </h2>
        
        <p class="text-xl md:text-2xl mb-12 max-w-3xl mx-auto text-gray-200 leading-relaxed">
          Skontaktuj się z nami już dziś i otrzymaj <span class="text-[#31EC56] font-semibold">bezpłatną wycenę</span> oraz profesjonalną konsultację
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/UBR/kontakt/" class="btn btn-secondary flex items-center text-xl">
            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Skontaktuj się z nami
          </a>
          
          <div class="flex items-center text-gray-300">
            <span class="mx-4 text-xl">lub</span>
          </div>
          
          <a href="tel:+48XXXXXXXXX" class="btn bg-white/10 backdrop-blur-sm text-white border border-white/20 hover:bg-white/20 flex items-center text-xl">
            <svg class="w-6 h-6 mr-3 text-[#31EC56]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <div>
              <div class="text-sm opacity-75">Zadzwoń teraz</div>
              <div>+48 XXX XXX XXX</div>
            </div>
          </a>
        </div>
        
        <!-- Trust indicators -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-16 pt-16 border-t border-white/10">
          <div class="flex flex-col items-center animate-slideInLeft" style="animation-delay: 0.1s;">
            <div class="text-2xl mb-2">⚡</div>
            <div class="text-sm text-gray-300">Szybka odpowiedź</div>
          </div>
          <div class="flex flex-col items-center animate-slideInLeft" style="animation-delay: 0.2s;">
            <div class="text-2xl mb-2">📝</div>
            <div class="text-sm text-gray-300">Bezpłatna wycena</div>
          </div>
          <div class="flex flex-col items-center animate-slideInLeft" style="animation-delay: 0.3s;">
            <div class="text-2xl mb-2">🔧</div>
            <div class="text-sm text-gray-300">Profesjonalne doradztwo</div>
          </div>
          <div class="flex flex-col items-center animate-slideInLeft" style="animation-delay: 0.4s;">
            <div class="text-2xl mb-2">🏆</div>
            <div class="text-sm text-gray-300">Gwarancja jakości</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
        <!-- Company Info -->
        <div class="md:col-span-2">
          <div class="flex items-center mb-4">
            <span class="logo-font text-4xl gradient-text">UBR</span>
            <span class="ml-3 text-sm text-gray-400 uppercase tracking-wider">Wykończenia Wnętrz</span>
          </div>
          <p class="text-gray-300 leading-relaxed mb-6 max-w-md">
            Profesjonalne prace wykończeniowe na najwyższym poziomie. Każdy detal ma znaczenie - realizujemy z pasją i precyzją.
          </p>
          <div class="flex space-x-4">
            <div class="flex items-center text-sm text-gray-400">
              <svg class="w-4 h-4 mr-2 text-[#31EC56]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Licencjonowani
            </div>
            <div class="flex items-center text-sm text-gray-400">
              <svg class="w-4 h-4 mr-2 text-[#31EC56]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Ubezpieczeni
            </div>
          </div>
        </div>
        
        <!-- Quick Links -->
        <div>
          <h3 class="text-lg font-semibold text-white mb-4">Szybkie linki</h3>
          <ul class="space-y-2">
            <li>
              <a href="/UBR/" class="text-gray-400 hover:text-[#31EC56] transition-colors duration-200">
                Strona główna
              </a>
            </li>
            <li>
              <a href="/UBR/galeria/" class="text-gray-400 hover:text-[#31EC56] transition-colors duration-200">
                Galeria
              </a>
            </li>
            <li>
              <a href="/UBR/o-nas/" class="text-gray-400 hover:text-[#31EC56] transition-colors duration-200">
                O nas
              </a>
            </li>
            <li>
              <a href="/UBR/kontakt/" class="text-gray-400 hover:text-[#31EC56] transition-colors duration-200">
                Kontakt
              </a>
            </li>
          </ul>
        </div>
        
        <!-- Contact -->
        <div>
          <h3 class="text-lg font-semibold text-white mb-4">Kontakt</h3>
          <div class="space-y-3">
            <div class="flex items-center text-gray-400">
              <svg class="w-4 h-4 mr-3 text-[#EF036C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span class="text-sm">+48 XXX XXX XXX</span>
            </div>
            <div class="flex items-center text-gray-400">
              <svg class="w-4 h-4 mr-3 text-[#EF036C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span class="text-sm">kontakt@ubr.pl</span>
            </div>
            <div class="flex items-start text-gray-400">
              <svg class="w-4 h-4 mr-3 mt-0.5 text-[#EF036C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="text-sm">ul. Budowlana 123<br/>00-001 Warszawa</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Bottom bar -->
      <div class="border-t border-gray-800 pt-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="text-gray-400 text-sm mb-4 md:mb-0">
            &copy; 2025 UBR Wykończenia Wnętrz. Wszystkie prawa zastrzeżone.
          </div>
          <div class="flex items-center space-x-6 text-sm text-gray-400">
            <span>Polityka prywatności</span>
            <span>•</span>
            <span>Regulamin</span>
            <span>•</span>
            <span>RODO</span>
          </div>
        </div>
      </div>
    </div>
  </footer>
</Layout>