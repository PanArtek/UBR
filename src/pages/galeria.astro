---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Gallery from '../components/Gallery.astro';

const category = Astro.url.searchParams.get('category') || 'all';
---

<Layout title="Galeria" description="Zobacz nasze realizacje - domy jednorodzinne, mieszkania, remonty i wykończenia. Portfolio UBR.">
  <Navigation />
  
  <!-- Page Header -->
  <section class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-20 overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0">
      <div class="absolute top-10 right-10 w-72 h-72 gradient-primary rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute bottom-10 left-10 w-56 h-56 gradient-secondary rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center space-y-4 animate-fadeIn">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-[#31EC56]/30 text-sm font-medium mb-4">
          <span class="w-2 h-2 bg-[#31EC56] rounded-full mr-2 animate-pulse"></span>
          Portfolio naszych realizacji
        </div>
        <h1 class="text-4xl md:text-6xl font-black">
          Nasze <span class="gradient-text">Realizacje</span>
        </h1>
        <p class="text-xl max-w-2xl mx-auto text-gray-200">
          Przekonaj się o jakości naszych usług przeglądając zrealizowane projekty
        </p>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Gallery category={category} />
    </div>
  </section>

  <div class="section-separator"></div>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center animate-fadeIn">
      <h2 class="text-3xl md:text-5xl font-black text-gray-900 mb-6">
        Podobają Ci się nasze <span class="gradient-text">realizacje?</span>
      </h2>
      <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto">
        Skontaktuj się z nami, aby omówić Twój projekt i otrzymać bezpłatną wycenę
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/UBR/kontakt/" class="btn btn-primary">
          Otrzymaj wycenę
        </a>
        <a href="tel:+48XXXXXXXXX" class="btn bg-white border-2 border-[#31EC56] text-[#31EC56] hover:bg-[#31EC56] hover:text-white">
          <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Zadzwoń teraz
        </a>
      </div>
      
      <!-- Trust indicators -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-3xl mb-2">✓</div>
          <p class="text-sm text-gray-600">Darmowa wycena</p>
        </div>
        <div class="text-center">
          <div class="text-3xl mb-2">⚡</div>
          <p class="text-sm text-gray-600">Szybka realizacja</p>
        </div>
        <div class="text-center">
          <div class="text-3xl mb-2">🏆</div>
          <p class="text-sm text-gray-600">Gwarancja jakości</p>
        </div>
        <div class="text-center">
          <div class="text-3xl mb-2">💯</div>
          <p class="text-sm text-gray-600">Zadowoleni klienci</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Company Info -->
        <div>
          <div class="flex items-center mb-4">
            <span class="logo-font text-4xl gradient-text">UBR</span>
          </div>
          <p class="text-gray-400 mb-4">
            Profesjonalne prace wykończeniowe na najwyższym poziomie. Każdy detal ma znaczenie.
          </p>
        </div>
        
        <!-- Quick Links -->
        <div>
          <h3 class="text-lg font-semibold mb-4">Szybkie linki</h3>
          <ul class="space-y-2">
            <li><a href="/UBR/" class="text-gray-400 hover:text-[#31EC56] transition-colors">Strona główna</a></li>
            <li><a href="/UBR/o-nas/" class="text-gray-400 hover:text-[#31EC56] transition-colors">O nas</a></li>
            <li><a href="/UBR/kontakt/" class="text-gray-400 hover:text-[#31EC56] transition-colors">Kontakt</a></li>
          </ul>
        </div>
        
        <!-- Contact -->
        <div>
          <h3 class="text-lg font-semibold mb-4">Kontakt</h3>
          <div class="space-y-2 text-gray-400">
            <p class="flex items-center gap-2">
              <svg class="w-4 h-4 text-[#EF036C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              +48 XXX XXX XXX
            </p>
            <p class="flex items-center gap-2">
              <svg class="w-4 h-4 text-[#EF036C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              kontakt@ubr.pl
            </p>
          </div>
        </div>
      </div>
      
      <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400 text-sm">
        <p>&copy; 2025 UBR Wykończenia Wnętrz. Wszystkie prawa zastrzeżone.</p>
      </div>
    </div>
  </footer>
</Layout>