---
const { category, width = 400, height = 300, index = 1 } = Astro.props;
const categoryNames = {
  'domy-jednorodzinne': 'Dom Jednorodzinny',
  'mieszkania': 'Mieszkanie', 
  'remonty-kapitalne': 'Remont Kapitalny',
  'wykonczennia': 'Wykończenia',
  'dachy-elewacje': 'Dachy & Elewacje',
  'lazienki-kuchnie': 'Łazienki & Kuchnie'
};
---

<svg width={width} height={height} xmlns="http://www.w3.org/2000/svg" class="rounded-lg shadow-sm">
  <defs>
    <linearGradient id={`grad-${category}-${index}`} x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3b82f6" />
      <stop offset="100%" style="stop-color:#1e40af" />
    </linearGradient>
  </defs>
  <rect width="100%" height="100%" fill={`url(#grad-${category}-${index})`} rx="8" />
  <text x="50%" y="40%" text-anchor="middle" fill="white" 
        font-family="system-ui" font-size="16" font-weight="600">
    {categoryNames[category]}
  </text>
  <text x="50%" y="60%" text-anchor="middle" fill="rgba(255,255,255,0.8)" 
        font-family="system-ui" font-size="12">
    UBR WYKOŃCZENIA WNĘTRZ
  </text>
</svg>