import ProjectPlaceholder from './ProjectPlaceholder.astro';

export interface Props {
  category?: string;
  limit?: number;
}

const { category = 'all', limit = 12 } = Astro.props;

// Load projects from JSON
let projectsData;
try {
  const response = await fetch(`${Astro.site || 'https://panartek.github.io'}${import.meta.env.BASE_URL}data/projects.json`);
  projectsData = await response.json();
} catch (error) {
  // Fallback data if JSON is not available
  projectsData = {
    projects: [],
    categories: [
      { id: 'lazienki-kuchnie', name: 'Åazienki & Kuchnie', icon: 'ðŸ›', order: 1 },
      { id: 'mieszkania', name: 'Mieszkania', icon: 'ðŸ ', order: 2 },
      { id: 'wykonczennia', name: 'WykoÅ„czenia', icon: 'ðŸŽ¨', order: 3 },
      { id: 'domy-jednorodzinne', name: 'Domy jednorodzinne', icon: 'ðŸ¡', order: 4 },
      { id: 'remonty-kapitalne', name: 'Remonty kapitalne', icon: 'ðŸ”¨', order: 5 },
      { id: 'dachy-elewacje', name: 'Dachy & Elewacje', icon: 'ðŸ˜ï¸', order: 6 }
    ]
