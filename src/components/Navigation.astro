---
const navItems = [
  { name: 'Strona główna', href: '/UBR/' },
  { name: 'Galeria', href: '/UBR/galeria/' },
  { name: 'O nas', href: '/UBR/o-nas/' },
  { name: 'Kontakt', href: '/UBR/kontakt/' },
];

const currentPath = Astro.url.pathname;
---

<nav class="bg-white/90 backdrop-blur-lg shadow-xl sticky top-0 z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex items-center flex-shrink-0">
        <a href="/UBR/" class="flex items-center group">
          <div class="relative">
            <span class="logo-font text-5xl gradient-text">UBR</span>
          </div>
          <span class="ml-3 text-sm font-medium text-gray-600 hidden sm:block uppercase tracking-wider">Wykończenia Wnętrz</span>
        </a>
      </div>
      
      <!-- Desktop menu -->
      <div class="hidden lg:flex items-center space-x-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`relative px-5 py-2.5 text-sm font-semibold rounded-lg transition-all duration-300 uppercase tracking-wide ${
              currentPath === item.href 
                ? 'text-white bg-gradient-to-r from-[#31EC56] to-[#EE72F8]' 
                : 'text-gray-700 hover:text-[#31EC56] hover:bg-gray-50'
            }`}
          >
            {item.name}
          </a>
        ))}
        
        <div class="flex items-center ml-6 space-x-3">
          <a
            href="tel:+48XXXXXXXXX"
            class="btn btn-secondary flex items-center"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Zadzwoń
          </a>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="lg:hidden flex items-center">
        <button
          type="button"
          class="mobile-menu-button p-3 rounded-lg text-gray-700 hover:text-[#31EC56] hover:bg-gray-100 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[#31EC56]"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Otwórz menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div class="mobile-menu hidden lg:hidden border-t border-gray-100 bg-white/95 backdrop-blur-lg">
    <div class="px-4 py-6 space-y-3 max-w-sm mx-auto">
      {navItems.map((item) => (
        <a
          href={item.href}
          class={`block px-4 py-3 rounded-lg font-semibold transition-all duration-200 uppercase tracking-wide ${
            currentPath === item.href
              ? 'bg-gradient-to-r from-[#31EC56] to-[#EE72F8] text-white'
              : 'text-gray-700 hover:text-[#31EC56] hover:bg-gray-50'
          }`}
        >
          {item.name}
        </a>
      ))}
      
      <div class="pt-4 border-t border-gray-200">
        <a
          href="tel:+48XXXXXXXXX"
          class="btn btn-secondary flex items-center justify-center w-full"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          +48 XXX XXX XXX
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileMenu = document.querySelector('.mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    const expanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
    mobileMenuButton.setAttribute('aria-expanded', (!expanded).toString());
  });
</script>